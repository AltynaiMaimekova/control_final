
<div class="container-fluid">
  <div class="col-md-6 col-md-offset-3">
  <%= simple_form_for(@place) do |f| %>
    <%= f.error_notification %>
    
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.association :category %>
      <%= f.input :description %>
      <%= f.file_field :image %>
      <%= f.input :agreement, :label => "I understand, that by submitting this form, the following information will be publicly accessible." %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
  </div>
</div>


